<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="A Pretty Long Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postTitleText"
            android:textSize="14sp"
            android:textColor="#212121" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:text="Used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postConditionText"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/condition_circle"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/postConditionCircle">
        </ImageView>


    </LinearLayout>

    <TextView
        android:text="here is a desciption of the very item you are looking at!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postDescriptionText"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="4dp"
        />

</LinearLayout>