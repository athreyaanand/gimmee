<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/postProfileImage"
            android:layout_width="40dp"
            android:src="@drawable/avatar"
            app:civ_border_width="0dp"
            app:civ_border_color="#000000"
            android:layout_height="40dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">

                <TextView
                    android:text="Joseph Csoti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/postDisplayName"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textColor="#212121" />

            <TextView
                android:text="\@joecho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/postUsername"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textColor="?android:attr/textColorSecondary" />
        </LinearLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arrow_right_black"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/postLocationIcon"/>

    <TextView
        android:text="5.9 miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/postLocationAmount"
        android:textSize="12sp" />


</LinearLayout>